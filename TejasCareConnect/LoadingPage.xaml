<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TejasCareConnect.LoadingPage"
             BackgroundColor="#f8f9fa">

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20" Padding="20">
        <Image Source="dotnet_bot.png" WidthRequest="150" HeightRequest="150" />
        
        <Label Text="TejasCareConnect" 
               FontSize="32" 
               FontAttributes="Bold"
               HorizontalOptions="Center" />
        
        <Label x:Name="StatusLabel"
               Text="Starting Web API..." 
               FontSize="18" 
               HorizontalOptions="Center"
               TextColor="#6c757d" />
        
        <ActivityIndicator IsRunning="True" 
                          Color="#0d6efd"
                          WidthRequest="50"
                          HeightRequest="50" />
        
        <Label x:Name="ErrorLabel"
               Text="" 
               FontSize="14" 
               HorizontalOptions="Center"
               TextColor="#dc3545"
               IsVisible="False"
               Padding="20,0" />
    </VerticalStackLayout>

</ContentPage>
