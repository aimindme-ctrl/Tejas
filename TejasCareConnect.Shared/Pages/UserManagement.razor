@page "/users"
@using TejasCareConnect.Shared.Models
@using TejasCareConnect.Shared.Services
@inject IAuthenticationService AuthService
@inject IUserService UserService
@inject NavigationManager Navigation

<AuthorizeView Roles="Admin">
    <Authorized>
        <PageTitle>User Management</PageTitle>

        <div class="user-management">
            <div class="header">
                <h2>User Management</h2>
                <button class="btn btn-primary" @onclick="ShowAddUserDialog">
                    <span class="icon">âž•</span> Add New User
                </button>
            </div>

            <!-- Quick Add Viewer -->
            <div class="quick-add-section">
                <h4>Quick Add Viewer</h4>
                <div class="quick-add-form">
                    <div class="form-row">
                        <input type="text" @bind="quickViewerName" class="form-control" placeholder="Full Name" />
                        <input type="email" @bind="quickViewerEmail" class="form-control" placeholder="Email" />
                        <input type="password" @bind="quickViewerPassword" class="form-control" placeholder="Password (min 6 chars)" />
                        <button class="btn btn-success" @onclick="QuickAddViewer" disabled="@isAddingViewer">
                            @if (isAddingViewer)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            else
                            {
                                <span>Add Viewer</span>
                            }
                        </button>
                    </div>
                    @if (!string.IsNullOrEmpty(quickAddMessage))
                    {
                        <div class="alert @(quickAddSuccess ? "alert-success" : "alert-danger") mt-2">
                            @quickAddMessage
                        </div>
                    }
                </div>
            </div>

            @if (isLoading)
            {
                <div class="loading">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p>Loading users...</p>
                </div>
            }
            else if (users.Any())
            {
                <div class="users-grid">
                    @foreach (var user in users)
                    {
                        <div class="user-card">
                            <div class="user-header">
                                <div class="user-info">
                                    <h4>@user.FullName</h4>
                                    <p class="email">@user.Email</p>
                                </div>
                                <span class="role-badge role-@user.Role.ToString().ToLower()">
                                    @user.RoleName
                                </span>
                            </div>

                            <div class="user-details">
                                <div class="detail-item">
                                    <span class="label">Status:</span>
                                    <span class="status @(user.IsActive ? "active" : "inactive")">
                                        @(user.IsActive ? "Active" : "Inactive")
                                    </span>
                                </div>
                                <div class="detail-item">
                                    <span class="label">Created:</span>
                                    <span>@user.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </div>
                                @if (user.LastLoginAt.HasValue)
                                {
                                    <div class="detail-item">
                                        <span class="label">Last Login:</span>
                                        <span>@user.LastLoginAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                                    </div>
                                }
                            </div>

                            <div class="user-actions">
                                <button class="btn btn-sm btn-secondary" @onclick="() => ShowChangeRoleDialog(user)">
                                    Change Role
                                </button>
                                <button class="btn btn-sm btn-info" @onclick="() => ShowResetPasswordDialog(user)">
                                    Reset Password
                                </button>
                                <button class="btn btn-sm btn-warning" @onclick="() => ToggleUserStatus(user)">
                                    @(user.IsActive ? "Deactivate" : "Activate")
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteUser(user)">
                                    Delete
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="no-data">
                    <p>No users found</p>
                </div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (showAddUserDialog)
            {
                <div class="modal-overlay" @onclick="CloseDialog">
                    <div class="modal-content" @onclick:stopPropagation>
                        <h3>Add New User</h3>
                        <EditForm Model="@newUser" OnValidSubmit="@AddUser" Context="formContext">
                            <div class="form-group">
                                <label>Full Name</label>
                                <InputText @bind-Value="newUser.FullName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <InputText @bind-Value="newUser.Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <InputText @bind-Value="newUser.Password" type="password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Role</label>
                                <InputSelect @bind-Value="newUser.Role" class="form-control">
                                    <option value="@UserRole.Viewer">Viewer</option>
                                    <option value="@UserRole.Contributor">Contributor</option>
                                    <option value="@UserRole.Admin">Admin</option>
                                </InputSelect>
                            </div>
                            <div class="modal-actions">
                                <button type="button" class="btn btn-secondary" @onclick="CloseDialog">Cancel</button>
                                <button type="submit" class="btn btn-primary">Add User</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            }

            @if (showChangeRoleDialog && selectedUser != null)
            {
                <div class="modal-overlay" @onclick="CloseDialog">
                    <div class="modal-content" @onclick:stopPropagation>
                        <h3>Change Role: @selectedUser.FullName</h3>
                        <div class="form-group">
                            <label>New Role</label>
                            <select @bind="selectedRole" class="form-control">
                                <option value="@UserRole.Viewer">Viewer</option>
                                <option value="@UserRole.Contributor">Contributor</option>
                                <option value="@UserRole.Admin">Admin</option>
                            </select>
                        </div>
                        <div class="modal-actions">
                            <button class="btn btn-secondary" @onclick="CloseDialog">Cancel</button>
                            <button class="btn btn-primary" @onclick="ChangeUserRole">Change Role</button>
                        </div>
                    </div>
                </div>
            }

            @if (showResetPasswordDialog && selectedUser != null)
            {
                <div class="modal-overlay" @onclick="CloseDialog">
                    <div class="modal-content" @onclick:stopPropagation>
                        <h3>Reset Password: @selectedUser.FullName</h3>
                        <p class="text-muted">@selectedUser.Email</p>
                        <div class="form-group">
                            <label>New Password</label>
                            <input type="password" @bind="newPassword" class="form-control" placeholder="Enter new password" />
                            <small class="text-muted">Minimum 6 characters</small>
                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" @bind="confirmPassword" class="form-control" placeholder="Confirm password" />
                        </div>
                        @if (!string.IsNullOrEmpty(passwordError))
                        {
                            <div class="alert alert-danger">@passwordError</div>
                        }
                        <div class="modal-actions">
                            <button class="btn btn-secondary" @onclick="CloseDialog">Cancel</button>
                            <button class="btn btn-primary" @onclick="ResetPassword" disabled="@isResettingPassword">
                                @if (isResettingPassword)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Reset Password
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="unauthorized">
            <h3>Access Denied</h3>
            <p>You don't have permission to view this page.</p>
            <button class="btn btn-primary" @onclick="NavigateHome">Go to Home</button>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<UserDto> users = new();
    private bool isLoading = true;
    private bool showAddUserDialog = false;
    private bool showChangeRoleDialog = false;
    private bool showResetPasswordDialog = false;
    private RegisterRequest newUser = new();
    private UserDto? selectedUser;
    private UserRole selectedRole;
    private string newPassword = string.Empty;
    private string confirmPassword = string.Empty;
    private string passwordError = string.Empty;
    private bool isResettingPassword = false;
    private string errorMessage = string.Empty;

    // Quick Add Viewer fields
    private string quickViewerName = string.Empty;
    private string quickViewerEmail = string.Empty;
    private string quickViewerPassword = string.Empty;
    private bool isAddingViewer = false;
    private string quickAddMessage = string.Empty;
    private bool quickAddSuccess = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task QuickAddViewer()
    {
        quickAddMessage = string.Empty;
        quickAddSuccess = false;

        if (string.IsNullOrWhiteSpace(quickViewerName))
        {
            quickAddMessage = "Please enter a full name";
            return;
        }

        if (string.IsNullOrWhiteSpace(quickViewerEmail))
        {
            quickAddMessage = "Please enter an email";
            return;
        }

        if (string.IsNullOrWhiteSpace(quickViewerPassword) || quickViewerPassword.Length < 6)
        {
            quickAddMessage = "Password must be at least 6 characters";
            return;
        }

        isAddingViewer = true;
        try
        {
            var request = new RegisterRequest
            {
                FullName = quickViewerName.Trim(),
                Email = quickViewerEmail.Trim().ToLower(),
                Password = quickViewerPassword,
                Role = UserRole.Viewer
            };

            var response = await UserService.RegisterUserAsync(request);
            
            if (response.Success)
            {
                quickAddSuccess = true;
                quickAddMessage = $"Viewer '{quickViewerName}' added successfully!";
                
                // Clear the form
                quickViewerName = string.Empty;
                quickViewerEmail = string.Empty;
                quickViewerPassword = string.Empty;
                
                // Reload users list
                await LoadUsers();
            }
            else
            {
                quickAddMessage = response.Message ?? "Failed to add viewer";
            }
        }
        catch (Exception ex)
        {
            quickAddMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isAddingViewer = false;
        }
    }

    private async Task LoadUsers()
    {
        isLoading = true;
        errorMessage = string.Empty;
        try
        {
            var response = await UserService.GetAllUsersAsync();
            if (response.Success && response.Data != null)
            {
                users = response.Data;
            }
            else
            {
                errorMessage = response.Message ?? "Failed to load users";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading users: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowAddUserDialog()
    {
        newUser = new RegisterRequest { Role = UserRole.Viewer };
        showAddUserDialog = true;
    }

    private void ShowChangeRoleDialog(UserDto user)
    {
        selectedUser = user;
        selectedRole = user.Role;
        showChangeRoleDialog = true;
    }

    private void ShowResetPasswordDialog(UserDto user)
    {
        selectedUser = user;
        newPassword = string.Empty;
        confirmPassword = string.Empty;
        passwordError = string.Empty;
        showResetPasswordDialog = true;
    }

    private void CloseDialog()
    {
        showAddUserDialog = false;
        showChangeRoleDialog = false;
        showResetPasswordDialog = false;
        selectedUser = null;
        newPassword = string.Empty;
        confirmPassword = string.Empty;
        passwordError = string.Empty;
    }

    private async Task AddUser()
    {
        var response = await UserService.RegisterUserAsync(newUser);
        if (response.Success)
        {
            await LoadUsers();
            CloseDialog();
        }
    }

    private async Task ChangeUserRole()
    {
        if (selectedUser != null)
        {
            var response = await UserService.ChangeUserRoleAsync(selectedUser.Id, selectedRole);
            if (response.Success)
            {
                await LoadUsers();
                CloseDialog();
            }
        }
    }

    private async Task ResetPassword()
    {
        passwordError = string.Empty;

        if (string.IsNullOrWhiteSpace(newPassword) || newPassword.Length < 6)
        {
            passwordError = "Password must be at least 6 characters";
            return;
        }

        if (newPassword != confirmPassword)
        {
            passwordError = "Passwords do not match";
            return;
        }

        if (selectedUser == null) return;

        try
        {
            isResettingPassword = true;
            var response = await UserService.ResetUserPasswordAsync(selectedUser.Id, newPassword);
            if (response.Success)
            {
                await LoadUsers();
                CloseDialog();
            }
            else
            {
                passwordError = response.Message ?? "Failed to reset password";
            }
        }
        catch (Exception ex)
        {
            passwordError = $"Error: {ex.Message}";
        }
        finally
        {
            isResettingPassword = false;
        }
    }

    private async Task ToggleUserStatus(UserDto user)
    {
        var response = await UserService.ToggleUserActiveStatusAsync(user.Id);
        if (response.Success)
        {
            await LoadUsers();
        }
    }

    private async Task DeleteUser(UserDto user)
    {
        if (confirm($"Are you sure you want to delete {user.FullName}?"))
        {
            var response = await UserService.DeleteUserAsync(user.Id);
            if (response.Success)
            {
                await LoadUsers();
            }
        }
    }

    private bool confirm(string message)
    {
        // In a real app, use a proper confirmation dialog
        return true;
    }

    private void NavigateHome()
    {
        Navigation.NavigateTo("/");
    }
}

